/* pages/booklist/search/search.wxss */

.SsearchWrap {
  height: 108rpx;
  padding: 0 30rpx;
  border-top: 2rpx solid rgba(238, 238, 238, 1);
  border-bottom: 2rpx solid rgba(238, 238, 238, 1);
  box-shadow: 0px 1px 5px 0px rgba(203, 203, 203, 0.1);
  margin-bottom: 32rpx;
}

.SsearchWrap .SflexWrap {
  display: flex;
  justify-content: space-between;
  padding-top: 20rpx;
}

.SsearchWrap  .search {
  display: flex;
  width: 100%;
  height: 68rpx;
  background: rgba(247, 247, 247, 1);
  border-radius: 17px;
  align-items: center;
}

.SsearchWrap  .search image {
  margin-left: 32rpx;
  margin-right: 10rpx;
}

.SsearchWrap .but {
  margin-left: 30rpx;
}

.SsearchWrap .but button {
  width: 120rpx;
  height: 68rpx;
  font-size: 28rpx;
  color: rgba(102, 102, 102, 1);
  background-color: white;
  border-radius: 17px;
  border: 2rpx solid rgba(102,102,102,1);
  line-height: 68rpx;
}

/* 历史记录 */

.historicalRecord {
  margin-left: 30rpx;
  margin-right: 82rpx;
}

.historicalRecordTitle {
  height: 28rpx;
  border-left: 8rpx solid rgba(0, 0, 0, 1);
  display: inline-block;
}

.historicalRecordTitle text {
  height: 28rpx;
  line-height: 28rpx;
  overflow: hidden;
  font-size: 28rpx;
  color: rgba(1, 1, 1, 1);
  display: block;
  margin-left: 22rpx;
}

.historicalRecordCenter {
  margin-left: 60rpx;
  margin-right: 82rpx;
}

.historCenter {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding-top: 30rpx;
  margin-bottom:60rpx;
  
}

.historCenter button {
  display: block;
  line-height: 52rpx;
  background: rgba(247, 247, 247, 1);
  padding: 12rpx 22rpx;
  font-size: 28rpx;
  border: 0;
  margin-bottom: 20rpx;
  color:rgba(102,102,102,1);
}

.historCenter button::after {
  border: none;
}
