/* pages/booklist/booklist.wxss */

/* 搜索 */

.searchWrap {
  margin: 20rpx 30rpx;
}

.searchWrap .search {
  width: 100%;
  height: 68rpx;
  display: flex;
  align-items: center;
  background: rgba(247, 247, 247, 1);
  border-radius: 17px;
}

.search image {
  margin-left: 35%;
  margin-right: 10rpx;
}

.Lcneter {

  width: 100%;
  min-height: 100rpx;
  background: rgba(247, 247, 247, 1);
}

.LcneterTitle {
  padding-top: 38rpx;
  padding-bottom: 26rpx;
  text-align: center;
  font-size: 34rpx;
  color: rgba(0, 0, 0, 1);
  line-height: 34rpx;
}

/* 内容 */

.LcneterList {
  display: flex;
  padding-left: 90rpx;
  flex-wrap: wrap;
  justify-content: space-between;
  padding-right: 90rpx;
}

.LcneterListM {
  width: 240rpx;
  height: 360rpx;
  background-color: white;
  margin-bottom: 60rpx;
}

.LcneterListMTitleWrap {
  height: 24rpx;
  line-height: 24rpx;
  padding-left: 20rpx;
}

.LcneterListMTitle {
  font-size: 24rpx;
  color: rgba(31, 31, 31, 1);
}

.LcneterListMUserWrop {
  margin-top: 10rpx;
  padding-left: 20rpx;
  height: 20rpx;
  line-height: 20rpx;
  margin-bottom: 24rpx;
}

.LcneterListMUser {
  font-size: 20rpx;
  color: rgba(153, 153, 153, 1);
}

.commentsWrap {
  text-align: right;
  font-size: 20rpx;
  color: rgba(187, 187, 187, 1);
  padding-right: 20rpx;
}
