/* 时间/分享 */
.navErap {
  padding: 0 30rpx;
  border-top: 2rpx solid #f3f3f3;
  box-shadow: 0px 2rpx 12rpx 0px rgba(201, 201, 201, 0.1);
}
.navErapPadding {
  height: 100rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
}

/* banner 图 */

.guideWords {
  margin-left: 30rpx;
  position:absolute;

}

/* 文字 */

.guideWordsFont {
  margin-top: 120rpx;
  margin-left: 94rpx;
  margin-right: 98rpx;
  font-size: 34rpx;
  Letter-spacing: 3rpx;
  font-weight: 400;
  color: rgba(15, 15, 15, 1);
  line-height: 25px;
}

/* swiper 切换 */

.swiperWrap {
  margin-top: 206rpx;
  margin-left: 78rpx;
  margin-right: 84rpx;
  margin-bottom: 42rpx;
}

.swiperWrap .swiperCenter {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
  background: rgba(247, 247, 247, 1);
}

.swiperWrap .swiperCenter image {
  width: 24rpx;
  height: 34rpx;
}

.swiperWrap .swiperCenter image:first-child {
  margin-left: 20rpx;
}

.swiperWrap .swiperCenter image:last-child {
  margin-right: 20rpx;
}

.swiperWrap .swiperCenter text {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
}
